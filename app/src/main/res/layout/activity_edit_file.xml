<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gonotepad.GoNotepad.EditFileActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/edtFileTempName"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/curved_edge_rect"
            android:gravity="center_vertical"
            android:textColor="#6d4c41"
            android:textSize="20sp" />

    </LinearLayout>

    <gonotepad.GoNotepad.Notepad
        android:id="@+id/edtTempNotepad"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_quill_drawing_a_line"
        android:padding="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="55dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_left_arrow"
        android:padding="7dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/curved_edge_rect"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edtTempNotepad"
        app:layout_constraintVertical_bias="0.68" />

    <ImageView
        android:id="@+id/imgSave"
        android:layout_width="55dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/curved_edge_rect"
        android:padding="7dp"
        android:src="@drawable/ic_checked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edtTempNotepad"
        app:layout_constraintVertical_bias="0.47" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/curved_edge_rect"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_delete"
        android:padding="7dp"
        app:layout_constraintLeft_toRightOf="@+id/imgBack"
        android:layout_marginLeft="100dp"
        app:layout_constraintRight_toLeftOf="@+id/imgSave"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>
